{% extends "base.twig" %}

{% block title %}Change Password Page{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/profile.css"/>
{% endblock %}

{% block header %}
    <header>
        <section class="hero is-info is-medium is-bold">
            <div class="hero-head">
                <nav class="navbar">
                    <div class="container">
                        <div class="navbar-brand">
                            <a class="navbar-item" href="../">
                                <i class="fas fa-money-bill-alt"></i>
                                <p class="">Fpay</p>
                            </a>
                            <span class="navbar-burger burger" data-target="navbarMenu">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </div>
                        <div id="navbarMenu" class="navbar-menu">
                            <div class="navbar-end">
                                <div class="tabs is-centered">
                                    <ul>
                                        <li class="is-active"><a>Home</a></li>
                                    </ul>
                                    <form action="{{ url_for('logout-post') }}" method="POST" >
                                        <span class="navbar-item">
                                            <button class="button is-light">
                                                <span class="icon" style="color: black">
                                                    <i class="fas fa-door-open"></i>
                                                </span>
                                                <span title="Hello from the other side" class="has-text-black has-text-centered">Log Out</span>
                                            </button>
                                        </span>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </section>
    </header>
{% endblock %}

{% block body %}
    <section class="hero is-fullheight is-bold is-info">
        <div class="hero-body">
            <form action="{{ url_for('profile-show') }}">
                <button class="btn">
                    <i style="color: white" class="fas fa-arrow-circle-left fa-3x"></i>
                </button>
            </form>
            <div class="container">
                <div class="column is-6 is-offset-3">
                    <form class="has-text-centered" action="{{ url_for('pass-change-apply') }}" method="POST" enctype="multipart/form-data">
                        <div class="box">
                            <div class="media">
                                <div class="media-content">
                                    <div class="content">
                                        <div class="field">
                                            <div>
                                                <p class="has-text-black">
                                                    Enter your old password:
                                                </p>
                                                {% if errorOld == 'xd' %}
                                                <div class="control">
                                                    <input class="input is-large has-text-black" type="password" name="old_password" placeholder="Old password" autofocus="">
                                                </div>
                                                {% else %}
                                                <div class="control">
                                                    <input class="input is-danger is-large has-text-black" type="password" name="old_password" placeholder="Old password" autofocus="">
                                                </div>
                                                <p class="has-text-danger has-text-centered">
                                                    {{ errorOld }}
                                                </p>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div>
                                                <p class="has-text-black">
                                                    Enter your new password:
                                                </p>
                                                <div class="control">
                                                    <input class="input is-large has-text-black" type="password" name="new_password" placeholder="New password" autofocus="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div>
                                                <p class="has-text-black">
                                                    Confirm:
                                                </p>
                                                {% if errorConf == 'xd' %}
                                                <div class="control">
                                                    <input class="input is-large has-text-black" type="password" name="confirm_password" placeholder="Confirm password" autofocus="">
                                                </div>
                                                {% else %}
                                                <div class="control">
                                                    <input class="input is-danger is-large has-text-black" type="password" name="confirm_password" placeholder="Confirm password" autofocus="">
                                                </div>
                                                <p class="has-text-danger has-text-centered">
                                                    {{ errorConf }}
                                                </p>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="level">
                                <div class="level-left">
                                    {% if ok != 'xd' %}
                                        <div id="msg" class="box has-background-success level-left has-text-centered has-text-white is-size-6">
                                            Password changed successfully
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="level-right">
                                    <button class="button is-info is-large" id="prof">
                                        Change Password
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}